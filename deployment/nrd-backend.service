[Unit]
Description=NRD Dashboard Backend API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/nrd-dash/NRD-Dashboard
Environment="PATH=/nrd-dash/NRD-Dashboard/.venv/bin"
EnvironmentFile=/nrd-dash/NRD-Dashboard/.env
ExecStart=/nrd-dash/NRD-Dashboard/.venv/bin/uvicorn backend.server:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
